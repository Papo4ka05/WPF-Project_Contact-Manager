<Window x:Class="ContactManager.ChangeCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManager"
        mc:Ignorable="d"
        Title="ChangeCategory" Height="200" Width="270">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock  Margin="0 10" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center">Change category</TextBlock>
            <TextBlock Text="Name: " Margin="30 10 30 0"/>
            <TextBox Style="{StaticResource InputStyle}" x:Name="tbName" Width="180" />
            <Button Content="_Change" Click="Change" Width="100" /> <!--Style="{StaticResource ButtonStyle}"-->
        </StackPanel>
    </Grid>
</Window>
