<Window x:Class="ContactManager.ChangeCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManager"
        mc:Ignorable="d"
        Title="ChangeCategory" Height="200" Width="270">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Height="20">Change category</TextBlock>
            <Label Content="_Name:" Width="180" />
            <TextBox Style="{StaticResource InputStyle}" x:Name="tbName" Width="180" />
            <Button Style="{StaticResource ButtonStyle}" Content="_Change" Click="Change" Width="100" />
        </StackPanel>
    </Grid>
</Window>
