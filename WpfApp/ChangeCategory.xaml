<Window x:Class="ContactManager.ChangeCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManager"
        mc:Ignorable="d"
        Title="ChangeCategory" Height="140" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="200">
            <TextBlock Height="22"><Run Text="Change category"/></TextBlock>
            <Label Content="_Name:" Width="180" />
            <TextBox x:Name="tbName" Width="180" />
            <Button Content="_Change" Click="Change" Width="100" />
        </StackPanel>
    </Grid>
</Window>
