<Window x:Class="ContactManager.CreateCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManager"
        mc:Ignorable="d"
        Title="CreateCategory" Height="200" Width="270">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Height="20">Create new category</TextBlock>
            <Label Content="_Name:" Width="180"/>
            <TextBox Style="{StaticResource InputStyle}" x:Name="tbName" Width="180" />
            <Button Content="_Create" Click="Create_Category" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
